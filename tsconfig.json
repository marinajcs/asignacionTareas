{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", 
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "skipLibCheck": true,
  },
  "include": [
    "lib/**/*.ts",
    "data/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
